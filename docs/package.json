{
  "name": "radsat-software-docs",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1",
  "scripts": {
    "build": "bun run diagrams && next build",
    "dev": "node ./scripts/dev-docs.mjs",
    "diagrams": "bun run diagrams:plantuml && bun run diagrams:drawio",
    "diagrams:plantuml": "node ./scripts/generate-plantuml.mjs",
    "diagrams:plantuml:watch": "node ./scripts/generate-plantuml.mjs --watch",
    "diagrams:drawio": "node ./scripts/generate-drawio.mjs",
    "diagrams:drawio:watch": "node ./scripts/generate-drawio.mjs --watch",
    "start": "serve out",
    "types:check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "lint": "biome check",
    "format": "biome format --write"
  },
  "dependencies": {
    "@orama/orama": "^3.1.18",
    "fumadocs-core": "16.6.5",
    "fumadocs-mdx": "14.2.8",
    "fumadocs-ui": "16.6.5",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/mdx": "^2.0.13",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "@biomejs/biome": "^2.4.2",
    "node-plantuml": "^0.9.0"
  }
}
